<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            display: flex;
            align-items: center;
            height: 100vh;
            justify-content: center;
            
        }
        .inner{
            display: flex;
           
        }
       form{
          box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
           background-color: #fff; 
           width: 255px;
           padding: 30px 70px 50px 30px;
        }
        h1{
            text-align: center;
            margin-bottom: 20px;
        }
        input{
            border: none;
            width: 200px;
            padding: 10px;
            border-radius: 3px;
            margin: 10px 0;
            background-color: #E9EFEC;
            outline-color: #EBD3F8;
        }
        .bg{
            background-color: #E9EFEC;
        } 
        button{
            border: none;
            padding: 10px 20px;
            margin:15px 0 0 35px;
            background-color: #8baed6;
            color: #fff;
            font-weight: bold;
        }
        ::placeholder{
            font-size: 12px;
        } 
        .pages{
            text-align: center;
            margin: 20px 0;
        }
        a{
            text-decoration: none;
            display: inline-block;
            background-color: #fff;
            padding: 7px 15px;
            color: rgba(0,0,0,.87);
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            font-size: 15px;
            margin: 0 3px;
        
        }
    </style>
</head>
<body>
      <div class="main">
     <div class="pages">
        <a href="/products/getData">Home</a>
        <a href="/products/form">Form</a>
        <a href="/auth/loginPage">Login</a>
     </div>

     <div class="inner">
    <form id="form" method="POST" action="">
        <h1>SignUp</h1>

        <div>
           
            <input type="text" placeholder="Username" id="username"/>
        </div>

        <div>
            
            <input type="email" placeholder="Email" id="email"/>
        </div>

        <div>
            
            <input type="password" placeholder="Password" id="password"/>
        </div>

        <button id="signup">SignUp</button>
    </form>

    <div class="bg">
        <img src="https://www.successmantra.in/assets/assestsnew/images/login-registration.png"/>
    </div>
</div>
</div>
    

    <script>
        
        let signup = document.querySelector('#signup');

        let form = document.querySelector('#form');

        form.addEventListener('submit', (e)=>{
            e.preventDefault();

            let username = document.querySelector('#username').value;
            let email = document.querySelector('#email').value;
            let password = document.querySelector('#password').value;

            fetch("/auth/register",{
                method : "POST",
                body:JSON.stringify({username, email, password}),
                headers:{
                    "Content-Type": "application/json;charset=UTF-8"
                }
            })
            .then((res)=> console.log("user added successfully"))
            .catch((error)=> console.log("something is wrong in fetch", error))

            document.querySelector('#username').value = "";
            document.querySelector('#email').value = "";
            document.querySelector('#password').value = "";

        })
    </script>
</body>
</html>